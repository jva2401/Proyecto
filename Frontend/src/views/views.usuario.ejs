<%- include("partials/partials.dash.header.ejs") %>
<div class="content">
    <h1><%= titulo %></h1>
<h1>Registros de Usuarios</h1>
<div class="container">
    <table border="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(registroUsers) { %>
            <tr id="user-<%= registroUsers._id %>">
                <td><%= registroUsers._id %></td>
                <td><%= registroUsers.nombre %></td>
                <td><%= registroUsers.email %></td>
                <td>
                    <button class="modificarRegristroUsers" onclick="showEditForm('<%= registroUsers._id %>')">Modificar</button>
                    <button class="elimina" onclick="EliminaRegistro(event)">Elimina</button>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<!-- Formulario para editar -->
<div id="editForm" style="display:none;">
    <h2>Editar Usuario</h2>
    <form id="formEditUser" onsubmit="GuardarCambios(event)">
        <input type="hidden" id="editUserId">
        <label for="editUserName">Nombre:</label>
        <input type="text" id="editUserName" required>
        <label for="editUserEmail">Correo:</label>
        <input type="email" id="editUserEmail" required>
        <button type="submit">Guardar Cambios</button>
        <button type="button" onclick="closeEditForm()">Cancelar</button>
    </form>
</div>
</div>


<%- include("partials/partials.dash.footer.ejs") %>
